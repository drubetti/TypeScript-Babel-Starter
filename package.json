{
  "name": "typescript-babel-starter",
  "author": "Daniele Rubetti",
  "description": "An example project with TypeScript and Babel",
  "version": "0.0.1",
  "license": "MIT",
  "repository": "github:drubetti/TypeScript-Babel-Starter",
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts\" --source-maps inline",
    "build:types": "tsc --emitDeclarationOnly",
    "start": "babel-node -x \".ts\" src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/node": "^14.14.19",
    "babel-core": "^7.0.0-bridge.0",
    "husky": "^4.3.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "dotenv": "^8.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
